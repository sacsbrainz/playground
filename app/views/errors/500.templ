package errors

import "playground/app/views/layouts"

templ Error500() {
	@layouts.BaseLayout() {
		<div class="h-screen w-full flex flex-col px-4 justify-center align-middle items-center gap-5">
			<div class="text-muted-foreground text-5xl font-bold">500</div>
			<div class="text-lg">An unexpected error occured</div>
			<a class="underline text-blue-600" href="/">Take me back</a>
		</div>
	}
}
